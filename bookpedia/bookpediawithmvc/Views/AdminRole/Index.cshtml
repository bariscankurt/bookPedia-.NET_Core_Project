@model IEnumerable<IdentityRole>

<div class="bg-primary text-white p-1 m-1">
    <h2>Role List</h2>
</div>
<div class="text-danger" asp-validation-summary="ModelOnly"></div>
<table class="table table-bordered table-striped m-1 p-1">
    <tr>
        <th>Role ID</th>
        <th>Role Name</th>
        <th>Users</th>
    </tr>
    @if (Model.Count() == 0)
    {
        <tr>
            <td colspan="4" class="text-center">
                No Roles
            </td>
        </tr>
    }
    else
    {
        foreach (var role in Model)
        {
            <tr>
                <td>@role.Id</td>
                <td>@role.Name</td>
                <td identity-role="@role.Id"></td>
                <td>
                    <form asp-route-id="@role.Id" asp-action="Delete">
                        <button type="submit" class="btn btn-danger">Delete</button>
                        <a asp-action="Edit" asp-route-id="@role.Id" class="btn btn-primary">Update</a>
                    </form>
                </td>
            </tr>
        }
    }
</table>

<a asp-action="Create" class="btn btn-success">Create Role</a>
